{
  "name": "contracts",
  "version": "1.0.0",
  "description": "Primodium contracts using MUD.",
  "repository": {
    "type": "git",
    "url": "https://github.com/primodiumxyz/primodium.git",
    "directory": "packages/contracts"
  },
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "pnpm run build:lib && pnpm run build:mud && pnpm run build:abi-ts",
    "build:abi-ts": "mud abi-ts",
    "build:lib": "rm -rf src/codegen && pnpm run build:terrain",
    "build:mud": "pnpm run build:prototype && pnpm mud build",
    "build:prototype": "tsx ./ts/prototypes/commands/prototypegen.ts",
    "build:terrain": "tsx ./ts/terrain/commands/terraingen.ts",
    "deploy:base-sepolia": "pnpm mud deploy --profile=base-sepolia",
    "deploy:caldera": "pnpm mud deploy --profile=caldera",
    "deploy:caldera-sepolia": "pnpm mud deploy --profile=caldera-sepolia",
    "deploy:local": "pnpm mud deploy --skipBuild",
    "deploy:redstone-holesky": "pnpm mud deploy --profile=redstone-holesky",
    "deploy:skale-bite": "pnpm mud deploy --profile=skale-bite",
    "deploy:skale-calypso": "pnpm mud deploy --profile=skale-calypso",
    "deploy:skale-europa": "pnpm mud deploy --profile=skale-europa",
    "deploy:skale-nebula": "pnpm mud deploy --profile=skale-nebula",
    "dev": "pnpm mud dev-contracts",
    "devnode": "mud devnode",
    "lint": "pnpm run prettier && pnpm run solhint",
    "prettier": "prettier --write './**/*.sol'",
    "solhint": "solhint --config ./.solhint.json 'src/**/*.sol' --fix",
    "test": "forge build && mud test --skipBuild"
  },
  "dependencies": {
    "@latticexyz/cli": "2.0.9",
    "@latticexyz/common": "2.0.9",
    "@latticexyz/config": "2.0.9",
    "@latticexyz/protocol-parser": "2.0.9",
    "@latticexyz/schema-type": "2.0.9",
    "@latticexyz/store": "2.0.9",
    "@latticexyz/world": "2.0.9",
    "@latticexyz/world-modules": "2.0.9",
    "dotenv": "^16.3.1",
    "tsx": "^3.12.8",
    "viem": "2.9.20",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@typechain/ethers-v5": "^10.2.0",
    "@types/node": "^18.15.11",
    "@types/xml2js": "^0.4.14",
    "abdk-libraries-solidity": "^3.2.0",
    "ds-test": "https://github.com/dapphub/ds-test.git#e282159d5170298eb2455a6c05280ab5a73a4ef0",
    "forge-std": "https://github.com/foundry-rs/forge-std.git#74cfb77e308dd188d2f58864aaf44963ae6b88b1",
    "prettier": "^3.3.3",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.7",
    "solhint-config-mud": "2.0.9",
    "solhint-plugin-mud": "2.0.9",
    "solidity-trigonometry": "https://github.com/mds1/solidity-trigonometry.git",
    "typechain": "^8.1.1"
  }
}
